{
  "manifest_version": 3,

  "name": "Land Better Jobs Launcher",
  "description": "Launch your links and resume in one click for job applications",
  "version": "1.0.0",
  "icons": { "128": "LBJ Favicon.png" },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": "LBJ Favicon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "activeTab",
    "storage"
  ]
}