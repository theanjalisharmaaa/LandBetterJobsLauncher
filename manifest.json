{
  "manifest_version": 3,

  "name": "Land Better Jobs Launcher",
  "description": "Launch your links and resume in one click for job applications",
  "version": "1.0.0",
  "icons": { "128": "LBJ Favicon.png" },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": "LBJ Favicon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "web_accessible_resources": [
    {
      "resources": ["contentScript.js"],
      "matches": ["<all_urls>"]
    }
  ]
} 